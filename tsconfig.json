{
  "compilerOptions": {
    "declaration": true,
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "Node16",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.spec.ts"],
  "ts-node": {
    "esm": true
  }
}
